<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:local="clr-namespace:LibVLCSharp.WPF.Sample"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock" x:Class="LibVLCSharp.WPF.Sample.MainWindow"
        mc:Ignorable="d"
        Title="Playlist Player" Height="570" Width="960" KeyDown="Window_KeyDown" ResizeMode="CanResize" >
    <Window.CommandBindings>
    </Window.CommandBindings>
    <Grid>
        <wpf:VideoView x:Name="videoView" Margin="0,0,0,0" Background="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}" >
            <Grid x:Name="notificationGrid" Visibility="Collapsed">
                <Label x:Name="notificationLabel" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Foreground="#FFFF8000" FontStyle="Italic" Width="344" Height="80"/>
            </Grid>
        </wpf:VideoView>
    </Grid>
    <!--<WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0,0,0,1" CornerRadius="0" />
    </WindowChrome.WindowChrome>-->
</Window>